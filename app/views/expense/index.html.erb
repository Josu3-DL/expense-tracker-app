<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
   
    <%= stylesheet_link_tag "styles", media: "all" %>
    <%= stylesheet_link_tag "expense", media: "all" %>

</head>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <header class="dashboard-header">
            <div class="brand">
                <div class="icon-circle">
                    <span class="dollar-icon">$</span>
                </div>
                <span class="brand-name ms-2">Expense Tracker</span>
            </div>
            
            <div class="header-actions">
                <button class="btn user-btn" data-bs-toggle="modal" data-bs-target="#userProfileModal">
                    <i class="bi bi-person-circle"></i>
                    <%= @user.username %>
                </button>
                <button class="btn btn-primary new-expense-btn" data-bs-toggle="modal" data-bs-target="#newExpenseModal">
                    <i class="bi bi-plus-lg"></i>
                    Nuevo gasto
                </button>
            </div>
        </header>
        
        <!-- Main Content -->
        <div class="dashboard-content">
            <div class="row g-4">
                <!-- Left Column - Expenses List -->
                <div class="col-lg-8">
                    <div class="card expenses-card">
                        <div class="card-body">
                            <h2 class="expenses-title">Tus gastos</h2>
                            <p class="expenses-subtitle">Lista de todos tus gastos</p>
                            
                            <div class="table-responsive">
                                <table class="table expenses-table">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Categoría</th>
                                            <th>Fecha</th>
                                            <th>Cantidad</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    <% @expenses.each do |expense|%>
                                        <tr>
                                            <td> <%= expense.name %> </td>
                                            <td>
                                                <span class="category-badge school">
                                                    <%= expense.category %>
                                                </span>
                                            </td>
                                            <td>
                                                <%= expense.date%>
                                            </td>
                                            <td>
                                              C$ <%= expense.ammount %>
                                            </td>
                                            <td>
                                                <button class="btn action-btn delete-btn">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                                <button class="btn action-btn edit-btn">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Right Column - Summary -->
                <div class="col-lg-4">
                    <!-- Total Spent Card -->
                    <div class="card total-card mb-4">
                        <div class="card-body">
                            <div class="total-header">
                                <i class="bi bi-currency-dollar total-icon"></i>
                                <span>Total gastado</span>
                            </div>
                            <div class="total-amount">C$ <%= @total_spent %></div>
                        </div>
                    </div>
                    
                    <!-- Quick Summary Card -->
                    <div class="card summary-card">
                        <div class="card-body">
                            <h3 class="summary-title">
                                <i class="bi bi-bar-chart-line"></i>
                                Resumen rapido
                            </h3>
                            
                            <div class="summary-stats">
                                <div class="stat-item">
                                    <div class="stat-label">Gasto Promedio</div>
                                    <div class="stat-value">C$ <%= @averege_spent %></div>
                                </div>
                                
                                <div class="stat-item">
                                    <div class="stat-label">Mayor Gasto</div>
                                    <div class="stat-value">C$ <%= @maximum_spent %></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- New Expense Modal -->
    <div class="modal fade" id="newExpenseModal" tabindex="-1" aria-labelledby="newExpenseModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content expense-modal">
                <div class="modal-header border-0">
                    <h5 class="modal-title" id="newExpenseModalLabel">
                        <span class="expense-modal-icon">$</span> Nuevo gasto
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="expense-modal-subtitle">Completa los detalles del nuevo gasto y haz clic en guardar.</p>
                    
                    <form id="newExpenseForm">
                        <div class="mb-3">
                            <label for="expenseName" class="form-label">Nombre</label>
                            <input type="text" class="form-control custom-input" id="expenseName" placeholder="ej: compra de supermercado" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="expenseAmount" class="form-label">Cantidad</label>
                            <input type="text" class="form-control custom-input" id="expenseAmount" placeholder="$0.00" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="expenseCategory" class="form-label">Categoría</label>
                            <select class="form-select custom-input" id="expenseCategory" required>
                                <option value="" selected disabled>selecciona una categoría</option>
                                <option value="Escuela">Escuela</option>
                                <option value="Comida">Comida</option>
                                <option value="Transporte">Transporte</option>
                                <option value="Entretenimiento">Entretenimiento</option>
                                <option value="Salud">Salud</option>
                                <option value="Otros">Otros</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="expenseDate" class="form-label">Fecha</label>
                            <div class="input-group">
                                <span class="input-group-text custom-input-icon">
                                    <i class="bi bi-calendar"></i>
                                </span>
                                <input type="text" class="form-control custom-input" id="expenseDate" placeholder="24 de marzo de 2025" required>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-outline-secondary cancel-btn" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary save-btn" id="saveExpenseBtn">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- User Profile Modal -->
    <div class="modal fade" id="userProfileModal" tabindex="-1" aria-labelledby="userProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content user-profile-modal">
                <div class="modal-body p-3">
                    <div class="user-profile-content">
                        <div class="user-avatar">
                            <i class="bi bi-person"></i>
                        </div>
                        <div class="user-name">
                            <%= @user.username %>
                        </div>
                        <button class="btn logout-btn" id="logoutBtn">
                            <%= link_to "Salir", logout_path %>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

